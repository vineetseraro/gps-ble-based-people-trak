<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/traquer_yellow</item>
        <item name="android:thickness">1dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#16191f</item>
        <item name="colorControlNormal">#16191f</item>
    </style>

    <style name="style2">
        <item name="android:textSize">@dimen/text_size_style2</item>
        <item name="android:textColor">@color/txt_color_style2</item>
    </style>

    <style name="style7">
        <item name="android:textSize">@dimen/text_size_style7</item>
        <item name="android:textColor">@color/txt_color_style7</item>
    </style>

    <style name="style8">
        <item name="android:textSize">@dimen/text_size_style8</item>
        <item name="android:textColor">@color/txt_color_style8</item>
    </style>

    <style name="style10">
        <item name="android:textSize">@dimen/text_size_style10</item>
        <item name="android:textColor">@color/txt_color_style10</item>
    </style>

    <style name="style11">
        <item name="android:textSize">@dimen/text_size_style11</item>
        <item name="android:textColor">@color/txt_color_style11</item>
    </style>

    <style name="style12">
        <item name="android:textSize">@dimen/text_size_style12</item>
        <item name="android:textColor">@color/txt_color_style12</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/eight_c</item>
        <item name="android:textSize">10sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/eight_c</item>

        <item name="fontPath">fonts/source_sans_pro_regular.ttf</item>
        <item name="colorControlNormal">@color/eight_c</item>
        <item name="colorControlActivated">@color/eight_c</item>

    </style>

</resources>
